echo "# swarp : combine search images if > 1 exposure " 

listhead WS0047_475960_1230--700_tile1_z_32+fakeSN.fits \
       > WS0047_475960_1230--700_combined_z_32+fakeSN.head 

CODE=$? ; echo "RETURN CODE: $CODE "
if [ $CODE != 0 ]  ; then 
   echo " listhead FAILED --> STOP PIPELINE " 
   touch RUN12_combined_swarpSEARCH.FAIL ; exit ; fi 

ln -sf WS0047_475960_1230--700_tile1_z_32+fakeSN.fits \
	 WS0047_475960_1230--700_combined_z_32+fakeSN.fits 
ln -sf WS0047_475960_1230--700_tile1_z_32+fakeSN.weight.fits \
	 WS0047_475960_1230--700_combined_z_32+fakeSN.weight.fits 

CODE=$? ; echo "RETURN CODE: $CODE "
if [ $CODE != 0 ]  ; then 
   echo " swarp FAILED --> STOP PIPELINE " 
   touch RUN12_combined_swarpSEARCH.FAIL ; exit ; fi 

echo "#  " 
echo "# ------------------------------------------------------ " 
echo "# Created combined image WITHOUT fakes for finder charts. " 
echo "#  (not used in DiffImg pipeline)  " 

listhead WS0047_475960_1230--700_tile1_z_32.fits \
       > WS0047_475960_1230--700_combined_z_32.head 

CODE=$? ; echo "RETURN CODE: $CODE "
if [ $CODE != 0 ]  ; then 
   echo " listhead FAILED --> STOP PIPELINE " 
   touch RUN12_combined_swarpSEARCH.FAIL ; exit ; fi 

ln -sf WS0047_475960_1230--700_tile1_z_32.fits \
	 WS0047_475960_1230--700_combined_z_32.fits 
ln -sf WS0047_475960_1230--700_tile1_z_32.weight.fits \
	 WS0047_475960_1230--700_combined_z_32.weight.fits 

CODE=$? ; echo "RETURN CODE: $CODE "
if [ $CODE != 0 ]  ; then 
   echo " swarp FAILED --> STOP PIPELINE " 
   touch RUN12_combined_swarpSEARCH.FAIL ; exit ; fi 

cd JOBDIR/dp47/z_32 
echo "DONE processing RUN12_combined_swarpSEARCH on $HOST" > RUN12_combined_swarpSEARCH.DONE 
